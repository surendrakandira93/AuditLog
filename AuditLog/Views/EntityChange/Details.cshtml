@model EntityChangeSetDto
@using Newtonsoft.Json;

@{
    ViewData["Title"] = "Details";
}

<h1>Audit-Details</h1>

<div>
    
    <hr />
    <dl class="row">       
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BrowserInfo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BrowserInfo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ClientName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClientName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ClientIpAddress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClientIpAddress)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreationTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreationTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Reason)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Reason)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EntityChanges)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <thead>
                    <tr>

                        <th>
                            Action Type
                        </th>
                        <th>
                            Entity Name
                        </th>
                        <th>
                            Property
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var enti in Model.EntityChanges)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => enti.ChangeType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => enti.EntityTypeFullName)
                            </td>
                            <td>
                                @(JsonConvert.SerializeObject(enti.PropertyChanges))
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>
</div>
<div>|
    <a asp-action="Index">Back to List</a>
</div>
